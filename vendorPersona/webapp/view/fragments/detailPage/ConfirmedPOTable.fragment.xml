<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:core="sap.ui.core">
	<smartTable:SmartTable class="sapUiSizeCompact " editable="false" 
            placeToolbarInTable="true" enableAutoBinding="true" entitySet="PurchaseOrders" 
            header="OpenPO" showFullScreenButton="true" showRowCount="true" 
            tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false"
            useTablePersonalisation="true" useVariantManagement="false"
              beforeRebindTable="onbeforeRebindConfirmPoTable"
            initiallyVisibleFields="po_number,plantcode,status">
        <Table sticky="ColumnHeaders,HeaderToolbar">
		    <columns>
                <Column>
                        <customData>    
					        <core:CustomData key="p13nData" value='\{"columnKey": "po_number", "leadingProperty": "po_number",
                            "columnIndex": 0 ,"sortProperty": "po_number","filterProperty": "po_number"}'/>
			    	    </customData>
                        <Text text="{i18n>ponum}"/>
                </Column>
                <!--   <Column>
				    <Text text="{i18n>companycode}"/>
			    </Column> -->
                <Column>
                    <customData>    
					    <core:CustomData key="p13nData" value='\{"columnKey": "plantcode", "leadingProperty": "plantcode",
                            "columnIndex": 1 ,"sortProperty": "plantcode","filterProperty": "plantcode"}'/>
				            </customData>
                    <Text text="{i18n>plantcode}"/>
                </Column>
                <Column>
                    <customData>    
					    <core:CustomData key="p13nData" value='\{"columnKey": "issued_po_date", "leadingProperty": "issued_po_date",
                            "columnIndex": 2 ,"sortProperty": "issued_po_date","filterProperty": "issued_po_date"}'/>
				    </customData>
                    <Text text="{i18n>issuedate}"/>
                </Column>
		<!-- 	<Column>
				<Text text="{i18n>confirmdate}"/>
			</Column>  -->
                <Column>
                    <customData>    
					    <core:CustomData key="p13nData" value='\{"columnKey": "status", "leadingProperty": "status",
                            "columnIndex": 3 ,"sortProperty": "status","filterProperty": "status"}'/>
				    </customData>
                    <Text text="{i18n>status}"/>
                </Column>
			    <Column>
				    <Text text="{i18n>action}"/>
			    </Column>
		    </columns>
		    <items>
		    	<ColumnListItem id="idConfirmColumnItem" type="Navigation" press="onPurchaseOrderPress">
	    			<cells>
    					<Text text="{po_number}"/>
                        <Text text="{plant_code}"/>
                <!--  <Text text="{company_code}"/>  -->                  
                        <Text text="{path:'issued_po_date',formatter: '.formatter.onDateConvert'}"/>
			    <!--	<Text text="{path:'po_confirm_date',formatter: '.formatter.onDateConvert'}"/> --> 
					    <ObjectStatus text="{status}" state="Information"/>
					    <Button text="{i18n>ViewLineItems}" press="onViewLineItemsPress" type="Transparent"/>
				    </cells>
			    </ColumnListItem>
		    </items>
	    </Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>