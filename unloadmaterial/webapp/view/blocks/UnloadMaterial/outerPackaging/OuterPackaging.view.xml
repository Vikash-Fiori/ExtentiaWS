<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:tt="sap.ui.table" controllerName="com.agel.mmts.unloadmaterial.view.blocks.UnloadMaterial.outerPackaging.OuterPackagingController">


    <Table id="idOuterPackaging" items="{path: 'OuterPackagings'}" autoPopinMode="true" growingThreshold="5" growing="true" fixedLayout="false">
        <columns>
            <Column>
                <Text text="Outer Packaging"/>
            </Column>
            <Column>
                <Text text="Inner Packaging"/>
            </Column>
            <Column>
                <Text text="Received Inner Packaging"/>
            </Column>
            <Column>
                <Text text="Line Item"/>
            </Column>
            <Column>
                <Text text="UOM"/>
            </Column>
            <Column>
                <Text text="Status"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{PackagingType}"/>
                    <ObjectIdentifier title="{LineNumber}"/>
                    <Text text="{PackagingQty}"/>
                    <Text text=""/>
                    <Text text="{UOM}"/>
                    <core:Icon src="sap-icon://accept" class="size1" color="#087137" >
                        <core:layoutData>
                            <FlexItemData growFactor="1" />
                        </core:layoutData>
                    </core:Icon>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    
</mvc:View>


