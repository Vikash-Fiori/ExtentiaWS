<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:ui="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.returnmaterial.controller.ReturnMaterialDetailPage"
    xmlns:contractorForm ="com.agel.mmts.returnmaterial.view.blocks.returnDetails.contractorForm"
    xmlns:lineItemsForm="com.agel.mmts.returnmaterial.view.blocks.returnDetails.lineItemsForm" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>returnMaterialSummary}">
                        <Link text="{i18n>returnMaterial}" press=".handleToAllPOBreadcrumPress"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>returnSummary}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{PONumber}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>returnSummary}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{PONumber}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>PODetails}- {PONumber}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                    <VBox visible="{= %{Status}==='CONFIRMED' ? true : false}">

                    </VBox>
                    <VBox visible="true">
                        <Button text="Close" press="onConfirmPO" type="Emphasized"/>
                    </VBox>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column">
                <VBox renderType="Bare">
                    <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd">
                            <Label text="{i18n>approvedDate}" />
                            <!-- missing -->
                            <Text text="{path:'CreatedAt',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                            }"/>
                        </VBox>
                        <VBox renderType="Bare" class="sapUiMediumMarginEnd" visible="true">
                            <Label text="{i18n>order}" />
                            <!-- missing -->
                            <Text text="{path:'ConfirmedDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                            }"/>
                        </VBox>

                        <VBox renderType="Bare">
                            <Label text="{i18n>status}" />
                            <!-- missing -->
                            <ObjectStatus text="{Status}" state="{= ${Status}==='CONFIRMED' ? 'Success' : 'Warning'}"/>
                        </VBox>
                    </FlexBox>
                </VBox>

            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>
            <!-- Basic Details Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>basicDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>ContractorDetails}" class="BasicDetalFormTitleStyle">
                        <f:SimpleForm layout="ColumnLayout" binding="{Contractor}" singleContainerFullSize="true" class="style-RemoveTitleHeight">
                            <f:content>
                                <!-- <core:Title  /> -->
                                <Label text="{i18n>ContractorName}" />
                                <Text text="{Name}" />

                                <Label text="{i18n>ContractorId}" />
                                <Text text="{ID}" />

                                <Label text="{i18n>PlantSite-Location}" />
                                <Text text="{PlantSiteLocation}"/>

                                <Label text="{i18n>ActivePeriod}" />
                                <Text text="{path:'ActivePeriod',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                                }"/>

                                <!-- <core:Title />  -->
                                <Label text="{i18n>Materials}" />
                                <Text text="{Materials}"/>
                                <!-- <ExpandableText binding="{Address}" text="{parts: [{path: 'Street'}, {path: 'City'}, {path: 'State'}, {path: 'Country'}, {path: 'pinCode'}]}" overflowMode="InPlace"/> -->
                                <Label text="{i18n>Description}" />
                                <Text text="{Description}"/>

                                <Label text="{i18n>Service-Covered}" />
                                <Text text="{ServicesCovered}"/>

                            </f:content>
                        </f:SimpleForm>
                    </uxap:ObjectPageSubSection>

                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <ui:TreeTable id="TreeTable" rows="{path:'TreeTableModelView>/', parameters: {arrayNames:['ChildItemsView']}}" 
                            selectionMode="MultiToggle" enableSelectAll="false" title="{i18n>TreeTableViewTitle}" ariaLabelledBy="title" rowsUpdated="onRowsUpdated">
                            <ui:columns>

                                <ui:Column width="7%">
                                    <Label text="ID" />
                                    <ui:template>
                                        <Text text="{TreeTableModelView>ID}" />
                                    </ui:template>
                                </ui:Column>

                                <ui:Column width="7%">
                                    <Label text="Material Code" wrapping="true"/>
                                    <ui:template>
                                        <Text text="{TreeTableModelView>MaterialCode}" />
                                    </ui:template>
                                </ui:Column>

                                <ui:Column>
                                    <Label text="Plant"/>
                                    <ui:template>
                                        <ObjectIdentifier title="{TreeTableModelView>Plant}" />
                                    </ui:template>
                                </ui:Column>

                                <ui:Column>
                                    <Label text="Name"/>
                                    <ui:template>
                                        <Text text="{TreeTableModelView>Name}" wrapping="false" />
                                    </ui:template>
                                </ui:Column>     

                                <ui:Column>
                                    <Label text="Requested Quantity"/>
                                    <ui:template>
                                        <Text text="{TreeTableModelView>RequestedQuantity}" wrapping="false" />
                                    </ui:template>
                                </ui:Column>   

                                <ui:Column>
                                    <Label text="Rejected Quantity"/>
                                    <ui:template>
                                        <Text text="{TreeTableModelView>RejectedQuantity}" wrapping="false" />
                                    </ui:template>
                                </ui:Column>                      
                                
                                <ui:Column>
                                    <Label text="Approved Quantity"/>
                                    <ui:template>
                                        <Text text="{TreeTableModelView>ApprovedQuantity}" wrapping="false" />
                                    </ui:template>
                                </ui:Column>
                                   
                            </ui:columns>
                        </ui:TreeTable>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>