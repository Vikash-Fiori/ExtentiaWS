<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">

    <smartTable:SmartTable class="sapUiResponsiveContentPadding" id="idPurchaseOrdersdsdTable" 
        editable="false" placeToolbarInTable="true" enableAutoBinding="true" 
        entitySet="ReturnMaterialRequestSet" showFullScreenButton="true" showRowCount="false"
         tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false" 
         useTablePersonalisation="true" useVariantManagement="false" 
         beforeRebindTable="onbeforeRebindOpenPoTable">

        <Table sticky="ColumnHeaders,HeaderToolbar" updateFinished="onPurchaseOrderTableUpdateFinished" 
            alternateRowColors="true">
            <columns>

                <Column>
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ID", "leadingProperty": "ID",
                                                 "columnIndex": 0 ,"sortProperty": "ID","filterProperty": "ID"}'/>
                    </customData>
                    <Text text="{i18n>ID}"/>
                </Column>

                <!-- RequestDate -->
                <Column>
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "RequestDate", "leadingProperty": "RequestDate",
                                                 "columnIndex": 1 ,"sortProperty": "RequestDate","filterProperty": "RequestDate"}'/>
                    </customData>
                    <Text text="{i18n>RequestDate}"/>
                </Column>

                <!-- ApprovedDate -->
                <Column>
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ApprovedDate", "leadingProperty": "ApprovedDate",
                                                 "columnIndex": 2 ,"sortProperty": "ApprovedDate","filterProperty": "ApprovedDate"}'/>
                    </customData>
                    <Text text="{i18n>ApprovedDate}"/>
                </Column>

                <!-- CreatedAt -->
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "CreatedAt", "leadingProperty": "CreatedAt",
                                                 "columnIndex": 3, "sortProperty": "CreatedAt"}'/>
                    </customData>
                    <Text text="{i18n>CreatedAt}"/>
                </Column>

                <!-- Comment -->
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Comment", "leadingProperty": "Comment",
                                                 "columnIndex": 4, "sortProperty": "Comment"}'/>
                    </customData>
                    <Text text="{i18n>Comment}"/>
                </Column>

                <!-- Status -->
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Status", "leadingProperty": "Status",
                                                 "columnIndex": 5, "sortProperty": "Status"}'/>
                    </customData>
                    <Text text="{i18n>Status}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="onPurchaseOrderPress">
                    <cells>
                        <ObjectIdentifier text="{ID}"/>
                        <Text text="{path:'RequestDate',
                                    type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }    
                        }"/>
                        <Text text="{path:'ApprovedDate',
                                    type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }    
                        }"/>
                        <Text text="{path:'CreatedAt',
                                    type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }    
                        }"/>
                        <Text text="{Comment}"/>
                        <Text text="{Status}"/>
                    </cells>
                </ColumnListItem>

            </items>
        </Table>
    </smartTable:SmartTable>

</core:FragmentDefinition>