<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="Do you want to create this BOQ for {boqCreationModel>/dialogTitle}?" id="materialFragment" contentWidth="50%">
        <content>
            <FlexBox wrap="Wrap" renderType="Bare" class="sapUiSmallMargin">
                <Label text="Please enter the quantity"></Label>
                <Input value="{boqCreationModel>/quantity}" liveChange="onQuantityLiveChange" type="Number" valueState="{boqCreationModel>/valueState}" valueStateText="{boqCreationModel>/valueStateText}"></Input>
            </FlexBox>
        </content>
        <beginButton>
            <Button id="idCreateBOQButton" text="Confirm" press="onConfirmCreateBOQPress" type="Emphasized" enabled="{boqCreationModel>/isConfirmButtonEnabled}"></Button>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelBOQCreationProcess"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>