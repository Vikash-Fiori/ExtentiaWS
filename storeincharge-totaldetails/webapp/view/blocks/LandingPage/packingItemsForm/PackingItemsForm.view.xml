<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m" xmlns:u="sap.ui.unified"
    xmlns:smartTable="sap.ui.comp.smarttable"
    controllerName="com.agel.mmts.storeinchargetotaldetails.view.blocks.LandingPage.packingItemsForm.PackingItemsFormController">


<smartTable:SmartTable class="sapUiResponsiveContentPadding" id="idPurchasePackingListTable" editable="false"
     placeToolbarInTable="true" enableAutoBinding="true" entitySet="PackingListSet" showFullScreenButton="true"
     showRowCount="false" tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false" 
     useTablePersonalisation="true" useVariantManagement="false" beforeRebindTable="onbeforeRebindTable">


    <Table id="idPackgingListItemTable" width="auto" growing="true" growingThreshold="5">
        <columns>
         <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "ID", "leadingProperty": "ID",
                                                 "columnIndex": 0 ,"sortProperty": "ID","filterProperty": "ID"}'/>
                    </customData>
                <Text text="ID"/>
            </Column>
         <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "InvoiceDate", "leadingProperty": "InvoiceDate",
                                                 "columnIndex": 1 ,"sortProperty": "InvoiceDate","filterProperty": "InvoiceDate"}'/>
                    </customData>
                <Text text="InvoiceDate"/>
            </Column>
         <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Status", "leadingProperty": "Status",
                                                 "columnIndex": 2 ,"sortProperty": "Status","filterProperty": "Status"}'/>
                    </customData>
                <Text text="Status"/>
            </Column>
        </columns>
        <items>
           <ColumnListItem type="Navigation" press="onpressPackingListDetails">
                <cells>
                    <Text text="{ID}"/>
                    <Text text="{path:'InvoiceDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                        }"/>
                    <ObjectIdentifier title="{Status}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</smartTable:SmartTable>
</mvc:View>
