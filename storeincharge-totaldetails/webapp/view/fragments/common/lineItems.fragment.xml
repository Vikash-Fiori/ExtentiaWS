<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"
    xmlns:smartTable="sap.ui.comp.smarttable">

<smartTable:SmartTable class="sapUiResponsiveContentPadding" id="idPurchaseOrdersTable" editable="false"
     placeToolbarInTable="true" enableAutoBinding="true" entitySet="ParentLineItemSet" showFullScreenButton="true"
     showRowCount="false" tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false" 
     useTablePersonalisation="true" useVariantManagement="false" beforeRebindTable="onbeforeRebindOpenPoTable">

    <Table width="auto" growing="true" growingThreshold="5" fixedLayout="false">
        <columns>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "LineNumber", "leadingProperty": "LineNumber",
                                                 "columnIndex": 0 ,"sortProperty": "LineNumber","filterProperty": "LineNumber"}'/>
                    </customData>
                <Text text="{i18n>LineNumber}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "MaterialCode", "leadingProperty": "MaterialCode",
                                                 "columnIndex": 1 ,"sortProperty": "MaterialCode","filterProperty": "MaterialCode"}'/>
                    </customData>
                <Text text="{i18n>materialCode}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Name", "leadingProperty": "Name",
                                                 "columnIndex": 2 ,"sortProperty": "Name","filterProperty": "Name"}'/>
                    </customData>
                <Text text="Name"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Description", "leadingProperty": "Description",
                                                 "columnIndex": 3 ,"sortProperty": "Description","filterProperty": "Description"}'/>
                    </customData>
                <Text text="{i18n>description}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "PlantCode", "leadingProperty": "PlantCode",
                                                 "columnIndex": 4 ,"sortProperty": "PlantCode","filterProperty": "PlantCode"}'/>
                    </customData>
                <Text text="{i18n>plant}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "StorageLocation", "leadingProperty": "StorageLocation",
                                                 "columnIndex": 5 ,"sortProperty": "StorageLocation","filterProperty": "StorageLocation"}'/>
                    </customData>
                <Text text="{i18n>storageloc}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Quantity", "leadingProperty": "Quantity",
                                                 "columnIndex": 6 ,"sortProperty": "Quantity","filterProperty": "Quantity"}'/>
                    </customData>
                <Text text="{i18n>quantity}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "UoM", "leadingProperty": "UoM",
                                                 "columnIndex": 7 ,"sortProperty": "UoM","filterProperty": "UoM"}'/>
                    </customData>
                <Text text="{i18n>orderUnit}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Price", "leadingProperty": "Price",
                                                 "columnIndex": 8 }'/>
                    </customData>
                <Text text="{i18n>netPrice}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Value", "leadingProperty": "Value",
                                                 "columnIndex": 9 }'/>
                    </customData>
                <Text text="{i18n>netValue}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "TaxCode", "leadingProperty": "TaxCode",
                                                 "columnIndex": 10 }'/>
                    </customData>
                <Text text="{i18n>taxCode}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "TaxIndicator", "leadingProperty": "TaxIndicator",
                                                 "columnIndex": 11 }'/>
                    </customData>
                <Text text="{i18n>taxIndicator}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "HSNCode", "leadingProperty": "HSNCode",
                                                 "columnIndex": 12 }'/>
                    </customData>
                <Text text="{i18n>hsncode}"/>
            </Column>
            <Column>
              <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "DeliveryDate", "leadingProperty": "DeliveryDate",
                                                 "columnIndex": 13 }'/>
                    </customData>
                <Text text="{i18n>deliveryDate}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{LineNumber}" wrappingType="Hyphenated"/>
                    <ObjectIdentifier title="{MaterialCode}"/>
                    <Text text="{Name}" wrappingType="Hyphenated"/>
                    <ExpandableText text="{Description}" maxCharacters="20" overflowMode="Popover"/>
                    <Text text="{PlantCode}"/>
                    <Text text="{StorageLocation}"/>
                    <Text text="{Quantity}"/>
                    <Text text="{UoM}"/>
                    <u:Currency stringValue="{Price}" currency="{Currency}" useSymbol="true"/>
                    <u:Currency stringValue="{Value}" currency="{Currency}" useSymbol="true"/>
                    <Text text="{TaxCode}"/>
                    <Text text="{TaxIndicator}"/>
                    <Text text="{HSNCode}"/>
                    <Text text="{path:'DeliveryDate',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                        }"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</smartTable:SmartTable>

</core:FragmentDefinition>