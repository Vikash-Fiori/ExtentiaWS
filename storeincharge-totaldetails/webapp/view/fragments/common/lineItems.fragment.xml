        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{LineNumber}" wrappingType="Hyphenated"/>
                   
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</smartTable:SmartTable>

</core:FragmentDefinition>