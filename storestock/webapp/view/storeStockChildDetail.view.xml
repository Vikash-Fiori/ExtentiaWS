<mvc:View controllerName="com.agel.mmts.storestock.controller.storeStockChildDetail" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <f:DynamicPage headerExpanded="true" busy="{objectViewModel>/busy}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title id="pageTitle" text="{i18n>Store-Stock-Child}"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <core:Fragment fragmentName="com.agel.mmts.storestock.view.fragments.ChilddetailPage.FilterBar" type="XML"/>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <!-- DynamicPage Content -->
        <f:content>
            <IconTabBar id="idIconTabBar" select="onIconTabSelect" headerMode="Inline" expanded="true" class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter id="idOpenPOTabTitle" text="{i18n>Unrestricted}" key="OPEN" count="{oIconTabCountModel>/openCount}">
                        <core:Fragment fragmentName="com.agel.mmts.storestock.view.fragments.ChilddetailPage.UnRestricted" type="XML"/>
                    </IconTabFilter>
                    <IconTabFilter text="{i18n>Restricted}" key="RESTRICTED" count="{oIconTabCountModel>/confirmCount}">
                        <core:Fragment fragmentName="com.agel.mmts.storestock.view.fragments.ChilddetailPage.Restricted" type="XML"/>
                    </IconTabFilter>

                    <IconTabFilter text="{i18n>Expected}" key="EXPECTED" count="{oIconTabCountModel>/dispatchCount}">
                        <core:Fragment fragmentName="com.agel.mmts.storestock.view.fragments.ChilddetailPage.Expected" type="XML"/>
                    </IconTabFilter>

                </items>
            </IconTabBar>
        </f:content>
    </f:DynamicPage>
</mvc:View>

