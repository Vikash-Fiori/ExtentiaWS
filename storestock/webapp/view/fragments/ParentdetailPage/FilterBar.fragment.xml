<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar">


    <fb:FilterBar id="filterbar" reset="onResetFilters" search="onSearch" useToolbar="false" showGoOnFB="true" showRestoreOnFB="true">
        <fb:filterGroupItems>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="PONOs" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <Input id="idNameInput" liveChange="onFilterChange" placeholder="{i18n>Search}" showSuggestion="true" showValueHelp="false" suggestionItems="{/PurchaseOrderSet}">
                        <suggestionItems>
                            <core:Item text="{PONumber}"/>
                        </suggestionItems>
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="po_release_date" label="{i18n>Date}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <DatePicker displayFormat="dd/MM/YYYY" id="DP1" placeholder="Enter Date" change="handleChange" class="sapUiSmallMarginBottom"/>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="MatCode" label="{i18n>MaterialID}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>
                    <Input id="idMaterialCode" placeholder="{i18n>EnterMatCode}" liveChange="onFilterChange" showValueHelp="false">
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>

            <fb:FilterGroupItem groupName="__$INTERNAL$" name="PlantCode" label="{i18n>PlantCode}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                <fb:control>


                    <Select width="6rem" id="idSelReason" forceSelection="false" selectedKey="{qrAssistantModel>/reason}" items="{
						    path: '/MasterQrCodeAssistanceReasonSet'						    
					    }">
                        <core:Item key="{Reason}" text="{Reason}" />
                    </Select>
                </fb:control>
            </fb:FilterGroupItem>

        </fb:filterGroupItems>
    </fb:FilterBar>

</core:FragmentDefinition>