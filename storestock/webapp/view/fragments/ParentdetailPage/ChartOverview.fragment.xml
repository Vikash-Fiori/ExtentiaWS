<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:fm="sap.ui.layout.form"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds"
    xmlns:vizData="sap.viz.ui5.data">

   

    <FlexBox alignItems="Start" justifyContent="Center">
        <viz:VizFrame id="idVizFrame1" uiConfig="{applicationSet:'fiori'}" vizType='donut' vizProperties="{title: { text : ' '}}" selectData="onPressSegment" deselectData="2">
            <viz:dataset>
                <vizData:FlattenedDataset data="{/vizdata/items}">
                    <vizData:dimensions>
                        <vizData:DimensionDefinition name="Department" value="{Department}"/>
                    </vizData:dimensions>
                    <vizData:measures>
                        <vizData:MeasureDefinition name="Employee Count" value="{EmployeeCount}"/>
                    </vizData:measures>
                </vizData:FlattenedDataset>
            </viz:dataset>
            <viz:feeds>
                <vizFeeds:FeedItem uid="size" type="Measure" values='Employee Count'/>
                <vizFeeds:FeedItem uid="color" type="Dimension" values="Department"/>
            </viz:feeds>
        </viz:VizFrame>

    </FlexBox>

</core:FragmentDefinition>








