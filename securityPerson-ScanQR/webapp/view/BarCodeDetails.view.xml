<mvc:View xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns="sap.m" controllerName="com.agel.mmts.securityPerson-ScanQR.controller.BarCodeDetails" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" showFooter="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:content>
                <VBox renderType="Bare">
                    <items>
                        <VBox renderType="Bare">
                             <Title text="{i18n>qRCodeDetails}"  titleStyle="H3" class="sapUiTinyMarginBottom"/>
                             <Text text="#723842980" />
                        </VBox>
                        <HBox renderType="Bare" class="sapUiSmallMarginTopBottom">
                            <items>
                                <VBox renderType="Bare" class="sapUiSmallMarginEnd">
                                     <Label text="{i18n>materialName}" />
                                     <Text text="MAT33452" /> 
                                </VBox>
                                 <VBox renderType="Bare">
                                    <Label text="{i18n>pODate}" />
                                    <Text text="12/02/2021"/>
                                </VBox>
                            </items>
                        </HBox>  
                         <VBox id="idHboxEnterVehicleNob" renderType="Bare" binding="{packing_list}">
                             <Text text="{i18n>VehicleNumber}" class="sapUiSmallMarginEnd"/>                         
                             <Input id="idInputVehcileNob" value="{vehicle_no}" width="80%" visible="{= %{vehicle_no}==='' ? true : false}" />
                             <Text id="idTextVehcileNob" text="{vehicle_no}" width="80%" visible="{= %{vehicle_no}==='' ? false : true}"/>                 
                         </VBox>
                         <VBox id="idHboxReEnterVehicleNob" renderType="Bare" binding="{packing_list}" visible="false">
                             <Text text="{i18n>reEnterVehicleNumber}" class="sapUiSmallMarginEnd"/>                         
                             <Input id="idReEnterInputVehcileNob" value="{vehicle_no}" width="80%" />
                         </VBox>                                         
                    </items>                    
                </VBox>        
                <HBox id="idHboxApproveReject" alignItems="Start" justifyContent="SpaceAround" >
                    <Button text="{i18n>approve}" press="onPressApproveQRCode" type="Accept"/>
                    <Button text="{i18n>reject}" press="onPressRejectQRCode" type="Reject"/>
                </HBox>                                                        
                </uxap:content>
                <uxap:actions>
                    <Button text="{i18n>submit}" binding="{/submitVehicleNumber(...)}" 
                        press="onPressSubmitQRCode" type="Emphasized"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>            
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection title="QRCodeDetail">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <f:SimpleForm id="sfQRData"  editable="true" 
                         layout="ResponsiveGridLayout" title="{i18n>QRCode}" labelSpanXL="4" 
                         labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" 
                         emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" 
                         columnsL="3" columnsM="3" singleContainerFullSize="false">
                            <f:content>
                                <core:Title text="{i18n>POAsnDetails}"/>
                                <Label text="{i18n>pONumber}" />
                                <Text text="{po_number}" />

                                <core:Title text="{i18n>ShipTo}" />
                                <Label text="{i18n>vendorId}" />
                                <Text text="{vendor_ID}"/>

                                <core:Title text="{i18n>From}" />
                                <Label text="{i18n>vendorName}" />
                                <Text text="{vendorName}"/>
                                <Label text="{i18n>vendorId}" />
                                <Text text="{vendorId}"/>
                                <Label text="{i18n>vendorLoc}" />
                                <Text text="{vendorLoc}"/>
                            </f:content>
                        </f:SimpleForm>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            
            <uxap:ObjectPageSection  titleUppercase="false" title="{i18n>Summary}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>parentLineItems}">
                        <VBox renderType="Bare">
                            <Table id="idParentLineItemsTable" width="auto" items="{packing_list/insepected_parent_line_items}"
                             noDataText="{i18n>noParentItems}"
                              growing="true" growingScrollToLoad="true" selectionChange=".onParentItemSelect"
                               mode="SingleSelectMaster">
                                <columns>
                                   <Column width="12%">
                                        <Text text="{i18n>purchase_order_ID}"/>
                                    </Column>
                                    <Column width="10%">
                                        <Text text="{i18n>materialCode}"/>
                                    </Column>
                                    <Column width="12%">
                                        <Text text="{i18n>name}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>description}"/>
                                    </Column>                                  
                                    <Column>
                                        <Text text="{i18n>packingListID}"/>
                                    </Column>
                                    <Column width="15%">
                                        <Text text="{i18n>ViewChildLineItems}"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="parent_table_item" type="Active">
                                        <cells>
                                            <ObjectIdentifier title="{po_number}" titleActive="true"/>
                                            <Text text="{material_code}"/>
                                            <Text text="{name}"/>
                                            <Text text="{description}"/>
                                            <Text text="{packing_list_ID}"/>                                            
                                            <Button text="{i18n>ViewChildLineItems}" type="Emphasized" press="onViewChildItemPress"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection  titleUppercase="false" title="{i18n>inspectionID}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>inspectionItemsTitle}" id="idInspectionTableSubSection">
                        <VBox>
                            <Table id="idInspectionTable" items="{insp_call}" width="auto" 
                            noDataText="{i18n>noInspectionItems}" 
                                growing="true" growingScrollToLoad="true">
                                <columns>
                                    <Column>
                                        <Text text="{i18n>inspectionID}"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="idInspectionItems" type="Navigation" press=".onInspectionIDPress">
                                        <cells>
                                            <ObjectIdentifier title="{inspection_call_id}" titleActive="true"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                 </uxap:subSections>
            </uxap:ObjectPageSection>

        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>