<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m" controllerName="com.agel.mmts.materialreservation.controller.MaterialReservationPage" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" busy="{objectViewModel>/busy}">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <!-- <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>PODetails}">
                        <Link text="{i18n>assignedPOList}" press=".handleToAllPOBreadcrumPress"/>
                    </Breadcrumbs> -->
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>MaterialReservation}" wrapping="true" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Title text="{Name}" wrapping="true" titleStyle="H3" />
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>MaterialReservation}" wrapping="true" titleStyle="H4"/>
                        <Title text="{Name}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{i18n>MaterialReservation}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                   
                    <Button text="Submit" class="sapUiTinyMarginBegin" press="onSubmitReservation" type="Emphasized" visible="{= ${IsDraft} ? false : true}"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column" binding="{PurchaseOrder}">
                <VBox renderType="Bare">
                    <FlexBox direction="Row" renderType="Bare" class="sapUiTinyMarginBottom">
                    </FlexBox>
                </VBox>
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="false" title="Additional Details">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Additional Details">
                        <uxap:blocks>
                            <f:SimpleForm layout="ColumnLayout" binding="{HeaderDetailsModel>/}" columnsM="2" columnsL="3" columnsXL="4" singleContainerFullSize="true" class="style-RemoveTitleHeight">
                                <f:content>
                                    <!-- <core:Title  /> -->
                                    <Label text="Movement Type"/>
                                    <Select id="idSelMovementType"  selectedKey="{HeaderDetailsModel>MovementTypeValue}" forceSelection="false" items="{HeaderDetailsModel>/movementType}">
                                        <core:Item key="{HeaderDetailsModel>value}" text="{HeaderDetailsModel>value}" />
                                    </Select>
                                    <Label text="Good Recipient" required="true"/>
                                    <Input id="idGoodReciept" value="{HeaderDetailsModel>GoodReciepient}" />
                                    <Label text="Reservation Date" required="true"/>
                                    <DatePicker id="idReservationDate" value="{HeaderDetailsModel>ReservationDate}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd" />
                                    <Label text="WBS" required="true"/>
                                    <Input id="idWBD" value="{HeaderDetailsModel>WBS}" />
                                    <Label text="Plant" required="true"/>
                                    <Input id="idPlant" value="{HeaderDetailsModel>Plant}" />
                                    <!-- <core:Title ></core:Title> -->
                                    <Label text="Cost Center" required="true"/>
                                    <Input id="idCostCenter" value="{HeaderDetailsModel>CostCenter}" />
                                    <Label text="Profit Center" required="true"/>
                                    <Input id="idProfitCenter" value="{HeaderDetailsModel>ProfitCenter}" />
                                    <Label text="Recieving Location" required="true"/>
                                    <Input id="idRecievingLocation" value="{HeaderDetailsModel>RecievingLocation}" />
                                    <Label text="GL Account" required="true"/>
                                    <Input id="idGLAccount" value="{HeaderDetailsModel>GLAccount}" />
                                </f:content>
                            </f:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <VBox>
                            <Table items="{reservationTableModel>/}" autoPopinMode="true" growingThreshold="5" growing="true" fixedLayout="false">
                                <headerToolbar>
                                    <OverflowToolbar >
                                        <content>
                                            <ToolbarSpacer></ToolbarSpacer>
                                            <Button icon="sap-icon://add" press="onAddReservationItemsPress"></Button>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <Text text="Item No"/>
                                    </Column>
                                    <Column>
                                        <Text text="Material Code"/>
                                    </Column>
                                     <Column>
                                        <Text text="Material Name"/>
                                    </Column>
                                    <Column>
                                        <Text text="Storage Location"/>
                                    </Column>
                                    <Column>
                                        <Text text="Quantity"/>
                                    </Column>
                                    <Column>
                                        <Text text="Base Unit"/>
                                    </Column>
                                    <Column>
                                        <Text text="Batch"/>
                                    </Column>
                                    <Column width="5%">
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem >
                                        <cells>
                                            <Text data:p="Dimension" text="{reservationTableModel>ItemNo}"/>
                                            <Select id="idPackagingTypeSelect" forceSelection="false" selectedKey="{reservationTableModel>MaterialCode}" change="onMaterialCodeChange" items="{
                                                path: '/MasterMaterialSet',
                                                templateShareable:false
                                            }" >
                                                <core:Item key="{MaterialCode}" text="{MaterialCode}" />
                                            </Select>
                                              <Text  text="{reservationTableModel>MaterialName}"/>
                                              <Text  text="{reservationTableModel>StorageLocation}"/>
                                            <Input width="30%" data:p="Dimension" value="{reservationTableModel>Qty}"/>
                                            <Text  text="{reservationTableModel>BaseUnit}"/>
                                            <Text  text="{reservationTableModel>Batch}"/>
                                            <Button icon="sap-icon://delete" press="onDeleteOuterPackingListItemPress" type="Transparent"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

        </uxap:sections>


         <uxap:footer>
            <OverflowToolbar>
            <ToolbarSpacer/>
                <Button id="idBtnSave" text="Save" icon="sap-icon://save" press="onSave"
                         type="Accept"/>
               
            </OverflowToolbar>
        </uxap:footer>
        
    </uxap:ObjectPageLayout>
</mvc:View>
