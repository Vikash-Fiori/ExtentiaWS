<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog	confirm="onFilterSortConfirm">
		<sortItems > 
			<ViewSettingsItem text="Name" key="Name" />	
            <ViewSettingsItem text="MaterialCode" key="MaterialCode" />            
		</sortItems>
		<groupItems>
			<ViewSettingsItem text="Name" key="Name" />
		</groupItems>
		<filterItems >
			<ViewSettingsFilterItem text="Name" key="Name">
				<items>
					<ViewSettingsItem text="{Name}" key="{Name}" />
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>