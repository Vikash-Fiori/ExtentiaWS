<mvc:View xmlns:f2="sap.f"
    xmlns:vbm="sap.ui.vbm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:tt="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m" controllerName="com.agel.mmts.storeinchargereturnmaterial.controller.SONumberDetails" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" preserveHeaderStateOnScroll="true" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" showFooter="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:breadcrumbs>
                    <Breadcrumbs id="breadcrumbsId" currentLocationText="{i18n>ReturnMaterialDetails}">
                        <Link text="{i18n>ReturnMaterial}" press=".handleToAllReturnMaterialBreadcrumPress"/>
                    </Breadcrumbs> 
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>ReturnMaterial}" wrapping="false" titleStyle="H4" class="sapUiTinyMarginTopBottom"/>
                        <Text  text="{Status}"/>
                    </FlexBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox direction="Column" renderType="Bare">
                        <Title text="{i18n>ReturnMaterial}" wrapping="true" titleStyle="H4"/>
                        <Title text="{SONumber}" binding="{SONumberId}" wrapping="true" titleStyle="H3"/>
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:expandedContent></uxap:expandedContent>
                <uxap:snappedTitleOnMobile>
                    <Title text="{SONumber}" binding="{SONumberId}" wrapping="true" titleStyle="Auto"/>
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                        <Button text="Accept" press="onPressSelectMaterials" type="Emphasized" icon="sap-icon://accept"/>
                        <Button text="Reject" press="onPressSelectMaterials" icon="sap-icon://decline"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox wrap="Wrap" height="100%" renderType="Bare" direction="Column">
                <HBox >
                    <VBox class="sapUiMediumMarginEnd">
                        <FlexBox fitContainer="true" alignItems="Center">
                                <VBox>
                                    <Title text="{i18n>SONumber}"/>
                                    <Text text="{SONumber}" binding="{SONumberId}"/>
                                </VBox>
                                <!-- <Text text="Avatar of a product with border" class="sapUiSmallMarginTop"/> -->
                        </FlexBox>
                    </VBox>
                    <VBox class="sapUiMediumMarginBeginEnd">
                        <Title text="{i18n>Issue Date}"/>
                        <Text text="{
				        path: 'CreatedAt',
				        type: 'sap.ui.model.type.Date',
				        formatOptions: {
				          pattern:  'MMMM dd, yyyy'
				        }
				      }" binding="{SONumberId}"/>
                    </VBox>
                    <VBox class="sapUiMediumMarginBeginEnd">
                        <Title text="{i18n>Issue Date}"/>
                        <Text text="{
				        path: 'RequestDate',
				        type: 'sap.ui.model.type.Date',
				        formatOptions: {
				          pattern:  'MMMM dd, yyyy'
				        }
				      }"/>
                    </VBox>
                </HBox>
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>

        <!-- Basic Details Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>basicDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>basicDetails}" class="BasicDetalFormTitleStyle">
                        <f:SimpleForm layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2" binding="{SONumberId/Contractor}" singleContainerFullSize="true" class="style-RemoveTitleHeight">
                            <f:content>
                                <!-- <core:Title  /> -->
                                <Label text="{i18n>ContractorName}" />
                                <Text text="{Name}" />

                                <Label text="{i18n>ContractorId}" />
                                <Text text="{ID}" />

                                <Label text="{i18n>PlantSite-Location}" />
                                <Text text="{PlantSiteLocation}"/>

                                <Label text="{i18n>ActivePeriod}" />
                                <Text text="{ActivePeriod}"/>

                                <!-- <core:Title />  -->
                                <Label text="{i18n>Materials}" />
                                <Text text="{Materials}"/>
                                
                                <Label text="{i18n>Description}" />
                                <Text text="{Description}"/>

                                <Label text="{i18n>Service-Covered}" />
                                <Text text="{ServicesCovered}"/>
                                
                                <Label text="{i18n>IssuedMaterials}" />
                                <Link text="{i18n>viewLineItems}"/>

                            </f:content>
                        </f:SimpleForm>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Line Items Section -->
            <uxap:ObjectPageSection titleUppercase="false" title="{i18n>lineItems}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="{i18n>lineItems}">
                        <tt:TreeTable id="TreeTable" rows="{path:'TreeTableModelView>/', parameters: {arrayNames:['ChildItemsView']}}" 
                            selectionMode="None" enableSelectAll="false" title="{i18n>TreeTableViewTitle}" ariaLabelledBy="title" rowsUpdated="onRowsUpdated">
                            <tt:columns>
                                <tt:Column>
                                    <Label text="" />
                                    <tt:template>
                                        <CheckBox selected="{TreeTableModelView>isSelected}" visible="{TreeTableModelView>selectable}"/>
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="ID" />
                                    <tt:template>
                                        <Text text="{TreeTableModelView>ID}" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Material Code" wrapping="true"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>MaterialCode}" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Plant"/>
                                    <tt:template>
                                        <ObjectIdentifier title="{TreeTableModelView>Plant}" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Name"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>Name}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>     

                                <tt:Column>
                                    <Label text="Issued Quantity"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>Quantity}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>
                                <tt:Column>
                                    <Label text="Qty Requested for Return"/>
                                    <tt:template>
                                        <Text text="{TreeTableModelView>RequirementQuantity}" wrapping="false" />
                                    </tt:template>
                                </tt:Column>                  
                                <tt:Column>
                                    <Label text="Qty Approved for Return"/>
                                    <tt:template>
                                        <Input type="Number" value="{TreeTableModelView>ApprovedRetQuantity}" visible="{TreeTableModelView>selectable}"/>
                                    </tt:template>
                                </tt:Column>
                            </tt:columns>
                        </tt:TreeTable>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>

</mvc:View>