<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">

    <smartTable:SmartTable class="sapUiSizeCompact" id="idBOQRequestTable" editable="false" placeToolbarInTable="true" enableAutoBinding="true" entitySet="BOQApprovalRequestSet" showFullScreenButton="true" showRowCount="false" tableType="ResponsiveTable" demandPopin="false" useExportToExcel="false" useTablePersonalisation="true" useVariantManagement="false" beforeRebindTable="onBeforeRebindBOQTable">

        <!-- <smartTable:layoutData><FlexItemData growFactor="1" /></smartTable:layoutData> -->
        <Table sticky="ColumnHeaders,HeaderToolbar" alternateRowColors="true">
            <columns>

                <Column >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "PONumber", "leadingProperty": "ParentLineItem/PONumber",
                                                 "columnIndex": 0 ,"sortProperty": "ParentLineItem/PONumber","filterProperty": "ParentLineItem/PONumber"}'/>
                    </customData>
                    <Text text="{i18n>ponum}"/>
                </Column>
                <!-- Issue Date missing -->
                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "CreatedAt", "leadingProperty": "CreatedAt",
                                                 "columnIndex": 1 ,"sortProperty": "CreatedAt","filterProperty": "CreatedAt"}'/>
                    </customData>
                    <Text text="{i18n>requestDate}"/>
                </Column>

                <Column demandPopin="true" minScreenWidth="Tablet">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "vendorCode", "leadingProperty": "ParentLineItem/PurchaseOrder/Vendor/VendorCode",
                                                 "columnIndex": 2 ,"sortProperty": "ParentLineItem/PurchaseOrder/Vendor/VendorCode","filterProperty": "ParentLineItem/PurchaseOrder/Vendor/VendorCode"}'/>
                    </customData>
                    <Text text="{i18n>vendorCode}"/>
                </Column>

                <Column>
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "vendorName", "leadingProperty": "ParentLineItem/PurchaseOrder/Vendor/Name",
                                                 "columnIndex": 3 ,"sortProperty": "ParentLineItem/PurchaseOrder/Vendor/Name","filterProperty": "ParentLineItem/PurchaseOrder/Vendor/Name"}'/>
                    </customData>
                    <Text text="{i18n>name}"/>
                </Column>

                <Column demandPopin="true" minScreenWidth="Desktop"> 
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "PlantCode", "leadingProperty": "ParentLineItem/PurchaseOrder/PlantCode",
                                                 "columnIndex": 4 ,"sortProperty": "ParentLineItem/PurchaseOrder/PlantCode","filterProperty": "ParentLineItem/PurchaseOrder/PlantCode"}'/>
                    </customData>
                    <Text text="{i18n>plantcode}"/>
                </Column>

                <Column demandPopin="true" minScreenWidth="Desktop"> 
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "poIssuedDate", "leadingProperty": "ParentLineItem/PurchaseOrder/CreatedAt",
                                                 "columnIndex": 5 ,"sortProperty": "ParentLineItem/PurchaseOrder/CreatedAt","filterProperty": "ParentLineItem/PurchaseOrder/CreatedAt"}'/>
                    </customData>
                    <Text text="{i18n>poIssueDate}"/>
                </Column>

               <Column demandPopin="true" minScreenWidth="Desktop"> 
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "boqStatus", "leadingProperty": "Status",
                                                 "columnIndex": 6 ,"sortProperty": "Status","filterProperty": "Status"}'/>
                    </customData>
                    <Text text="{i18n>poIssueDate}"/>
                </Column>

            </columns>
            <items>

                <ColumnListItem type="Navigation" press="onBOQRequestPress">
                    <cells>
                        <Text text="{PONumber}" binding="{ParentLineItem}"/>
                        <Text text="{path:'CreatedAt',
                                    type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }    
                        }"/>
                        <Text text="{VendorCode}" binding="{ParentLineItem/PurchaseOrder/Vendor}"/>
                        <Text text="{Name}" binding="{ParentLineItem/PurchaseOrder/Vendor}"/>
                         <Text text="{PlantCode}" binding="{ParentLineItem/PurchaseOrder}"/>
                        <Text text="{path:'CreatedAt',
                                     type: 'sap.ui.model.type.Date',
				                     formatOptions: {
				                        pattern: 'MMMM dd, yyyy'
				                     }
                        }" binding="{ParentLineItem/PurchaseOrder}"/>
                        <ObjectStatus text="{Status}"></ObjectStatus>
                    </cells>
                </ColumnListItem>

            </items>
        </Table>
    </smartTable:SmartTable>

</core:FragmentDefinition>