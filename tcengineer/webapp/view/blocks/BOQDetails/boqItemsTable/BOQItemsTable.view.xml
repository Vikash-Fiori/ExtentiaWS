<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:tt="sap.ui.table" controllerName="com.agel.mmts.tcengineer.view.blocks.BOQDetails.boqItemsTable.BOQItemsTableController">

    <Table items="{path: 'ParentLineItem/BOQItems'}" autoPopinMode="true" alternateRowColors="true" growingThreshold="3" growing="true">
        <headerToolbar>
            <OverflowToolbar >
                <content>
                    <ToolbarSpacer></ToolbarSpacer>
                    <Button text="Approve" type="Accept" press="onApproveBOQPress"></Button>
                    <Button text="Reject" type="Reject" press="onRejectBOQPress"></Button>
                    <Button icon="sap-icon://sort"></Button>
                    <Button icon="sap-icon://filter"></Button>
                    <Button icon="sap-icon://group"></Button>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Name"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{MaterialCode}"/>
                    <Text text="{Name}"/>
                    <Text text="{Qty}"/>
                    <ExpandableText text="{Description}" overflowMode="InPlace" maxCharacters="15" />
                    <Text text="{UOM}"/>
                    <Text text="{CreatedAt}"/>

                </cells>
            </ColumnListItem>
        </items>
    </Table>




