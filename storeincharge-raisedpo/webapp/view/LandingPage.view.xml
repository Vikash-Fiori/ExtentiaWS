<mvc:View controllerName="com.agel.mmts.storeinchargeraisedpo.controller.LandingPage"
 height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <f:DynamicPage headerExpanded="true" busy="{objectViewModel>/busy}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title id="pageTitle" text="{i18n>TotalOrder}"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <core:Fragment fragmentName="com.agel.mmts.storeinchargeraisedpo.view.fragments.landingPage.FilterBar" type="XML"/>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <!-- DynamicPage Content -->
        <f:content>
            <IconTabBar id="idIconTabBar" select="onIconTabSelect" headerMode="Inline" expanded="true" class="sapUiResponsiveContentPadding">
                <items>

                    <IconTabFilter id="idRaisedPOTabTitle" text="{i18n>raisedPO}" key="RAISED" count="{oIconTabCountModel>/openCount}">
                        <core:Fragment fragmentName="com.agel.mmts.storeinchargeraisedpo.view.fragments.landingPage.RaisedPOTable" type="XML"/>
                    </IconTabFilter>

                     <IconTabFilter text="{i18n>inProgressPO}" key="INPROGRESS" count="{oIconTabCountModel>/confirmCount}">
                          <core:Fragment fragmentName="com.agel.mmts.storeinchargeraisedpo.view.fragments.landingPage.InTransitPOTable" type="XML"/>
                    </IconTabFilter>

                   <IconTabFilter text="{i18n>closedPO}" key="CLOSED" count="{oIconTabCountModel>/closedCount}">
                       <core:Fragment fragmentName="com.agel.mmts.storeinchargeraisedpo.view.fragments.landingPage.ClosedPOTable" type="XML"/>
                    </IconTabFilter>

                </items>
            </IconTabBar>
        </f:content>
    </f:DynamicPage>
</mvc:View>