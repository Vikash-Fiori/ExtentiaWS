                    </customData>
                    <Text text="{i18n>gateEntryID}"/>
                </Column>
                
                <Column demandPopin="true" minScreenWidth="Desktop">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "vehicleNumber",
                                 "columnIndex": 2}'/>
                    </customData>
                    <Text text="{i18n>vehicleNumber}"/>
                </Column>

                <Column demandPopin="true" minScreenWidth="Desktop">
                    <customData>
